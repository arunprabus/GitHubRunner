# base
FROM ubuntu:18.04

#Environmental variables and version
ARG RUNNER_VERSION="2.294.0"
ARG MAVEN_VERSION=3.6.3
ARG USER_HOME_DIR="/root"
ARG BASE_URL=https://apache.osuosl.org/maven/maven-3/${MAVEN_VERSION}/binaries

#Necessary Dependancy 
RUN apt-get update -y && apt-get upgrade -y && useradd -m docker
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
    curl jq build-essential libssl-dev libffi-dev python3 python3-venv python3-dev python3-pip
RUN apt-get -qq -y update && \
    DEBIAN_FRONTEND=noninteractive apt-get -qq -y install \
    wget \
    sudo \
    vim \
    software-properties-common && \
    mv /usr/bin/lsb_release /usr/bin/lsb_release.bak && \
    apt-get -y autoclean && \
    apt-get -y autoremove && \
    rm -rf /var/lib/apt/lists/*

#-------------GitHub Runner-------------
RUN cd /home/docker && mkdir actions-runner && cd actions-runner \
    && curl -O -L https://github.com/actions/runner/releases/download/v${RUNNER_VERSION}/actions-runner-linux-x64-${RUNNER_VERSION}.tar.gz \
    && tar xzf ./actions-runner-linux-x64-${RUNNER_VERSION}.tar.gz
#install some additional dependencies
RUN chown -R docker ~docker && /home/docker/actions-runner/bin/installdependencies.sh
# copy over the start.sh script
COPY start.sh start.sh
# make the script executable
RUN chmod +x start.sh

#-------------Java-------------
#RUN sudo apt-get install openjdk-8-jre openjdk-8-jdk -y
RUN sudo apt-get install openjdk-11-jre openjdk-11-jdk -y

#-------------Maven-------------
RUN sudo apt install maven -y

#-------------Docker-------------
RUN sudo apt install docker.io -y

# since the config and run script for actions are not allowed to be run by root,
# set the user to "docker" so all subsequent commands are run as the docker user
USER docker

#-------------set the entrypoint to the start.sh script-------------
ENTRYPOINT ["./start.sh"]

#docker.io/library/master-ubuntu-runner:test